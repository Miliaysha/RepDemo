<Window x:Class="Forum.Avtoriz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forum"
        mc:Ignorable="d"
        Title="Avtoriz" Height="300" Width="500" MinHeight="300" MinWidth="500">
    <StackPanel>
        <Label Content="Авторизация" HorizontalAlignment="Center"></Label>
        <WrapPanel HorizontalAlignment="Center">
        <Label Content="Логин"></Label>
            <TextBox Width="100" x:Name="t1"></TextBox>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center">
            <Label Content="Пароль"></Label>
            <TextBox Width="100" x:Name="t2"></TextBox>
        </WrapPanel>
        <Button Width="100" Height="20" Content="Войти" Click="Button_Click"></Button>
    </StackPanel>
</Window>
